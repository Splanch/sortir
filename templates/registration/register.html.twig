{% extends 'layout.html.twig' %}

{% block title %}Création compte{% endblock %}


{% block main %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Créer un participant</h1>

    {{ form_start(registrationForm, {'attr': {novalidate: 'novalidate'}}) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.prenom, {label: 'Prénom'}) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.telephone, {label: 'Téléphone'}) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.password, {
            label: 'Password'
        }) }}

        {{ form_row(registrationForm.rattacheA, {
            label: 'Campus'
        }) }}
        {{ form_row(registrationForm.administrateur) }}
        {{ form_row(registrationForm.actif) }}

        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <button type="reset" class="btn btn-primary">Annuler</button>
    {{ form_end(registrationForm) }}


{% endblock %}
